extends base

block content
  h4 Change Title of video
  form(method="POST")
    input(type="text", placeholder="Video Title", name="title", value=video.title, required)
    input(type="text", placeholder="Description", name="description", value=video.description, required, minlength=20)
    input(type="text", placeholder="Hashtags, separated by comma.", value=video.hashtags.join(), name="hashtags", required)
    input(type="submit" value="Save")