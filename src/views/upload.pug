extends base

block content
  div
    video#preview
    button#startBtn Start Recording
  if errorMessage 
    span=errorMessage
  form(method="POST", enctype="multipart/form-data").identify-form
    label(for="video") Video File 
    input(type="file", accept="video/*", required, id="video" name="video")
    input(type="text", placeholder="Title", name="title", required, maxlength=80)
    input(type="text", placeholder="Description", name="description", required, minlength=20)
    input(type="text", placeholder="Hashtags, separated by comma.", name="hashtags", required)
    input(type="submit", value="Upload Video")
  block scripts
    script(src="/assets/js/recorder.js") 